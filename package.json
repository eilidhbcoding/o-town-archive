{
  "name": "ots-archive",
  "version": "1.0.0",
  "description": "An archive of the information from the O-Town Showdown website",
  "main": "welcome.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "run-p build:*",
    "build:html": "npm run render:md && posthtml -c posthtml.json",
    "build:js": "webpack --mode=production",
    "build:css": "postcss src/styles/*.css -o dist/main-v2.css",
    "postbuild:css": "purgecss --css dist/main-v2.css --content dist/*.html --output dist/main-v2.css",
    "render:md": "node tools/render-md pages/*.md -o src/views/content/",
    "serve": "browser-sync start --server --open=false \"dist\" --files \"dist\"",
    "watch": "run-p serve watch:*",
    "watch:html": "onchange \"src/views\" -- npm run build:html",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development"
  },
  "author": "Eilidh Babineau",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "babel-loader": "^9.2.1",
    "browser-sync": "^3.0.3",
    "cssnano": "^7.0.6",
    "eslint": "^9.14.0",
    "eslint-webpack-plugin": "^4.2.0",
    "marked": "^14.1.3",
    "minimist": "^1.2.8",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-expressions": "^1.11.4",
    "posthtml-modules": "^0.9.1",
    "purgecss": "^6.0.0",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  }
}
